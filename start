#!/bin/bash

n="Archstall"
echo "[$n] Start"

##[E] Check If is EFI and if not 
[ -d "/sys/firmware/efi/efivars" ] && echo "[$n] You are in efi mode. Please change it to standard."

##Setup Keyboard
loadkeys pl

##Setup Time
timedatectl set-ntp true


##Setup Partitions
ii=0
for i in fdisk -l | grep "Disk /dev" | cut -d" " -f 2 | sed "s/://" ; do

    echo "$ii $i"
    ii=$ii+1

done


echo "[$n] End"

